<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_retailer_sign_up_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context="com.example.myfirstapp.retailerSignUpLogin">

        <RelativeLayout android:id="@+id/activity_retailer_post_offer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
>

            <ImageView
                android:id="@+id/dottedLine2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="30dp"
                android:layerType="software"
                android:src="@drawable/dotted"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/circle1y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/circle"
                    android:paddingTop="12dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="25sp"

                    />
                <TextView
                    android:id="@+id/circle2y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/circle"
                    android:paddingTop="12dp"
                    android:text="2"
                    android:backgroundTint="#30D5C8"
                    android:textAlignment="center"
                    android:textSize="25sp"
                />
            </LinearLayout>
            <EditText
                android:layout_width="330dp"
                android:layout_height="115dp"
                android:layout_marginTop="80dp"
                android:id="@+id/offerDescr"
                android:background="@drawable/rounded_corner"
                android:hint="Enter your offer here..."
                android:padding="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="200dp"
                    android:src="@drawable/shareicon" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="200dp"
                    android:id="@+id/coupon2"
                    android:src="@drawable/coupon2" />

            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="255dp"
                android:text="Start Date:"
                android:textSize="18sp"

                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/dpResult"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="285dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_corner"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:text="Start Time:"


                android:textSize="18sp"
                android:textStyle="bold" />

            <TimePicker
                android:id="@+id/timeResult"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="385dp"
                android:background="@drawable/rounded_corner"
                android:calendarViewShown="false"
                android:padding="0dp"
                android:timePickerMode="spinner" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="470dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offer Time Limit"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarvalue"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarLabel"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="1dp"
                    android:text="mins"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="500dp"
                android:max="60"
                android:progress="30" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="520dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount amount"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarvalue2"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarLabel2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="%"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar2"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="550dp"
                android:max="100"
                android:progress="50" />


        </RelativeLayout>
        <RelativeLayout android:id="@+id/activity_retailer_post_offer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
>


            <EditText
                android:layout_width="330dp"
                android:layout_height="115dp"
                android:layout_marginTop="40dp"
                android:id="@+id/offerDescr3"
                android:background="@drawable/rounded_corner"
                android:hint="Enter your offer here..."
                android:padding="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/share3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="200dp"
                    android:src="@drawable/shareicon" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="200dp"
                    android:id="@+id/coupon3"
                    android:src="@drawable/coupon2" />

            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="255dp"
                android:text="Start Date:"
                android:textSize="18sp"

                android:textStyle="bold" />

            <DatePicker
                android:id="@+id/dpResult3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="285dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_corner"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:padding="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:text="Start Time:"


                android:textSize="18sp"
                android:textStyle="bold" />

            <TimePicker
                android:id="@+id/timeResult3"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="385dp"
                android:background="@drawable/rounded_corner"
                android:calendarViewShown="false"
                android:padding="0dp"
                android:timePickerMode="spinner" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="470dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offer Time Limit"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarvalue3"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarLabel3"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="1dp"
                    android:text="mins"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar3"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="500dp"
                android:max="60"
                android:progress="30" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="520dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount amount"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarvalue4"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/seekBarLabel4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="%"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar4"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="550dp"
                android:max="100"
                android:progress="50" />


        </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dottedLine"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layerType="software"
            android:src="@drawable/dotted"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/circle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:backgroundTint="#30D5C8"
                android:paddingTop="12dp"
                android:text="1"
                android:textAlignment="center"
                android:textSize="25sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/circle"
                android:paddingTop="12dp"
                android:text="2"
                android:textAlignment="center"
                android:textSize="25sp"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/businessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Business Name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/businessType"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:entries="@array/country_arrays"
        android:nextFocusForward="@+id/email"
        android:prompt="@string/businessTypePrompt"
        android:spinnerMode="dialog"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@+id/address"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Address"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@+id/phoneNumber"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Phone number"        android:inputType="text"

        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/firstName"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="Contact - First Name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusForward="@+id/lastName"
        android:visibility="invisible" />


    <LinearLayout
        android:id="@+id/linlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/retailerSignIn"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:contentDescription="Retailer Login"

            android:onClick="postRetailOffer"
            android:text="Login?" />

        <Button
            android:id="@+id/retailerSignUp"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:contentDescription="Retailer Login"
            android:imeOptions="actionNext"
            android:onClick="postRetailOffer"
            android:text="Sign Up?" />
    </LinearLayout>

    <EditText
        android:id="@+id/lastName"
        android:layout_width="wrap_content"        android:inputType="text"

        android:layout_height="wrap_content"
        android:hint="Contact - Last name"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/username"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username"        android:inputType="text"

        android:nextFocusForward="@+id/password"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:nextFocusForward="@+id/repeatPassword"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/repeatPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Repeat password"
        android:inputType="textPassword"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:clickable="true"
            android:text="TextView" />

    </LinearLayout>

    <Button
        android:id="@+id/signUpSubmit"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:contentDescription="Retailer Login"
        android:onClick="postRetailOffer"
        android:text="Submit"
        android:visibility="gone" />


</LinearLayout>
